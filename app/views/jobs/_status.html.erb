<% if @job.url.present? %>
  <% if @job.waiting? %>
    <span data-statusurl="<%= status_job_path(@job, format: :js) %>">
      <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>
      Le téléchargement du fichier à partir de l'url <%= @job.url %> est en cours merci de patienter...
    </span>
  <% else %>
    <span class="glyphicon glyphicon-check"></span>
    Téléchargement terminé.
  <% end %>
<% end %>
