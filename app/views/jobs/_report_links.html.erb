<div class="btn-group pull-right" role="group">
  <% if @elements_to_paginate.any? %>
    <%=
      link_to download_validation_job_path(id: @job.id, default_view: @default_view),
              class: 'btn btn-primary',
              'data-toggle': 'tooltip',
              'data-placement': 'top',
              'title': "Télécharger les résultats de validation", #" par #{@default_view == :files ? 'fichier' : 'ligne' }",
              'data-no-turbolink': true do
        t('report.download')
      end
    %>
  <% end %>
  <% if @job.mine?(current_user) %>
    <%=
      link_to destroy_job_path(@job), class: 'btn btn-primary', 'data-confirm': t('job.destroy.confirm'), 'data-method': :delete do
        t('report.delete')
      end
    %>
  <% end %>
</div>
<% if false %>
<div class="btn-group pull-left" role="group">
  <%=
    link_to validation_job_path(@job, default_view: 'lines'), class: "btn btn-#{@default_view == :lines ? 'warning' : 'default'}" do
      t('report.default_view.lines')
    end
  %>
  <%=
    link_to validation_job_path(@job, default_view: 'files'), class: "btn btn-#{@default_view == :files ? 'warning' : 'default'}" do
      t('report.default_view.files')
    end
  %>
</div>
<% end %>
